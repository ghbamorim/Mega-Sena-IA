[Unit]
Description=API de Previsão de Números da Loteria
After=network.target

[Service]
User=ec2-user
WorkingDirectory=/home/ec2-user/seu-projeto
Environment="PATH=/home/ec2-user/seu-projeto/venv/bin"
ExecStart=/home/ec2-user/seu-projeto/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always

[Install]
WantedBy=multi-user.target
